<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\HelloBundle\Entity\Location" table="location">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="20" nullable="false"/>
    <field name="street" type="string" column="street" length="15" nullable="false"/>
    <field name="avenue" type="string" column="avenue" length="15" nullable="false"/>
    <field name="description" type="text" column="description" nullable="false"/>
    <field name="contact" type="string" column="contact" length="15" nullable="false"/>
    <field name="posterid" type="integer" column="posterId" length="10" nullable="false"/>
    <field name="renttype" type="integer" column="renttype" length="1" nullable="false"/>
    <field name="postdate" type="date" column="postdate" nullable="false"/>
    <field name="editdate" type="date" column="editdate" nullable="false"/>
    <field name="zipcode" type="string" column="zipcode" length="5" nullable="true"/>
	<field name="numbath" type="string" column="numbath" length="50" nullable="false"/>
	<field name="rentamount" type="string" column="rentamount" length="50" nullable="false"/>
	<field name="laundryfacility" type="string" column="laundryfacility" length="50" nullable="false"/>
  </entity>
</doctrine-mapping>